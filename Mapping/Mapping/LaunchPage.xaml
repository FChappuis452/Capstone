<Page x:Class="Mapping.LaunchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:c="clr-namespace:Mapping.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{StaticResource NavigationPageTitle}">

    <UniformGrid
        Margin="5">

        <c:MenuButton
            x:Name="ButtonSelectLocation"
            Text="{StaticResource ButtonSelectLocation}"
            Click="OnClick_SelectLocation"/>
        <c:MenuButton
            x:Name="ButtonGenerateImage"
            Text="{StaticResource ButtonGenerateImage}"
            Click="OnClick_GenerateImage"/>
        <c:MenuButton
            x:Name="ButtonAddData"
            Text="{StaticResource ButtonAddTourPoint}"
            Click="OnClick_AddTourPoint"/>
        <c:MenuButton
            x:Name="ButtonAddModel"
            Text="{StaticResource ButtonAddModel}"
            Click="OnClick_AddModel"/>
        <c:MenuButton
            x:Name="ButtonAddHistoricalMap"
            Text="{StaticResource ButtonAddMap}"
            Click="OnClick_AddHistMap"/>
    </UniformGrid>
</Page>
