<Page x:Class="Mapping.TourPoints.TourPointsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tour Points">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <controls:MapControl
                Name="MyMapControl"
                Grid.Column="0"
                ZoomInteractionMode="GestureAndControl" 
                RotateInteractionMode="Disabled" 
                TiltInteractionMode="Disabled"
                MapTapped="OnTapMap"/>

            <!-- Main StackPanel -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="10">

                <!-- Point StackPanel -->
                <StackPanel
                    Margin="0 5"
                    Background="GhostWhite">
                    <Label
                        HorizontalAlignment="Center"
                        FontWeight="Black"
                        Content="Point"
                        />
                    <Label
                        Name="LabelPoint"
                        HorizontalAlignment="Center"
                        Content="No Point Selected"/>
                </StackPanel>

                <!-- Name StackPanel -->
                <StackPanel
                    Margin="0 5"
                    Background="GhostWhite">
                    <Label
                        HorizontalAlignment="Center"
                        FontWeight="Black"
                        Content="Name"/>
                    <TextBox
                        Name="TextBoxName"
                        Margin="5"
                        MaxLength="30"/>
                </StackPanel>

                <!-- Description StackPanel -->
                <StackPanel
                    Margin="0 5"
                    Background="GhostWhite">
                    <Label
                        HorizontalAlignment="Center"
                        FontWeight="Black"
                        Content="Description"/>
                    <TextBox
                        Name="TextBoxDescription"
                        Margin="5"
                        Height="200"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Image StackPanel -->
                <StackPanel
                    Margin="0 5"
                    Background="GhostWhite">
                    <Label
                        HorizontalAlignment="Center"
                        FontWeight="Black"
                        Content="Add Image"/>
                    <Label
                        Name="LabelImage"
                        HorizontalAlignment="Center"
                        Content="No Image Selected"/>
                    <Button
                        Name="ButtonSelectImage"
                        Margin="5"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        Content="Select Image"
                        Click="OnClick_AddImage"/>
                </StackPanel>

                <!-- Save StackPanel -->
                <StackPanel
                    Margin="0 5"
                    Background="GhostWhite">
                    <Button
                        Name="ButtonSavePoint"
                        Margin="5"
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Content="Save Point"
                        Click="OnClick_SavePoint"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>